<p id="notice"><%= notice %></p>

<h1>Listing Product Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>**Shortdescription</th>
      <th>**Enabled</th>
      <th>**Deleted</th>
      <th>**User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @top_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.name %></td>
        <td><%= product_category.shortDescription %></td>
        <td><%= product_category.enabled %></td>
        <td><%= product_category.deleted %></td>
        <td><%= User.find(product_category.user_id).name %></td>
        <td><%= link_to 'Show', product_category %></td>
        <td><%= link_to 'Edit', edit_product_category_path(product_category) %></td>
        <td><%= link_to 'Destroy', product_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

