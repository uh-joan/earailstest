<p id="notice"><%= notice %></p>

<h1>Listing Product Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>**Enabled</th>
      <th>**Deleted</th>
      <th>**User</th>
      <th>**Product Group</th>
      <th>**Product Item Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_items.each do |product_item| %>
      <tr>
        <td><%= product_item.name %></td>
        <td><%= product_item.enabled %></td>
        <td><%= product_item.deleted %></td>
        <td><%= User.find(product_item.user_id).name %></td>
        <td><%= ProductGroup.find(product_item.product_group_id).name %></td>
        <td><%= ProductItemType.find(product_item.product_item_type_id).name %></td>
        <td><%= link_to 'Show', product_item %></td>
        <td><%= link_to 'Edit', edit_product_item_path(product_item) %></td>
        <td><%= link_to 'Destroy', product_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

