<p id="notice"><%= notice %></p>

<h1>Listing Sales Order Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_order_statuses.each do |sales_order_status| %>
      <tr>
        <td><%= sales_order_status.name %></td>
        <td><%= User.find(sales_order_status.user_id).name %></td>
        <td><%= link_to 'Show', sales_order_status %></td>
        <td><%= link_to 'Edit', edit_sales_order_status_path(sales_order_status) %></td>
        <td><%= link_to 'Destroy', sales_order_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

