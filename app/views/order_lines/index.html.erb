<p id="notice"><%= notice %></p>

<h1>Listing Order Lines</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Dealtext</th>
      <th>Customernote</th>
      <th>Total</th>
      <th>Price</th>
      <th>Discount</th>
      <th>Addoncost</th>
      <th>Quantity</th>
      <th>Deleted</th>
      <th>Order</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_lines.each do |order_line| %>
      <tr>
        <td><%= order_line.text %></td>
        <td><%= order_line.dealText %></td>
        <td><%= order_line.customerNote %></td>
        <td><%= order_line.total %></td>
        <td><%= order_line.price %></td>
        <td><%= order_line.discount %></td>
        <td><%= order_line.addonCost %></td>
        <td><%= order_line.quantity %></td>
        <td><%= order_line.deleted %></td>
        <td><%= order_line.order.name %></td>
        <td><%= order_line.user.name %></td>
        <td><%= link_to 'Show', order_line %></td>
        <td><%= link_to 'Edit', edit_order_line_path(order_line) %></td>
        <td><%= link_to 'Destroy', order_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

