<p id="notice"><%= notice %></p>

<h1>Listing Product Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>**Description</th>
      <th>**Onlineviewlabel</th>
      <th>**Posviewlabel</th>
      <th>**Posviewlabel</th>
      <th>**Headerimagepath</th>
      <th>**Displayindex</th>
      <th>**Visibleonline</th>
      <th>**Visibleonpos</th>
      <th>**Enabled</th>
      <th>**Deleted</th>
      <th>**User</th>
      <th>**Product category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |product_group| %>
      <tr>
        <td><%= product_group.name %></td>
        <td><%= product_group.description %></td>
        <td><%= product_group.onlineViewLabel %></td>
        <td><%= product_group.posViewLabel %></td>
        <td><%= product_group.posViewLabel %></td>
        <td><%= product_group.headerImagePath %></td>
        <td><%= product_group.displayIndex %></td>
        <td><%= product_group.visibleOnline %></td>
        <td><%= product_group.visibleOnPos %></td>
        <td><%= product_group.enabled %></td>
        <td><%= product_group.deleted %></td>
        <td><%= User.find(product_group.user_id).name %></td>
        <td><%= TopCategory.find(product_group.product_category_id).name %></td>
        <td><%= link_to 'Show', product_group %></td>
        <td><%= link_to 'Edit', edit_product_group_path(product_group) %></td>
        <td><%= link_to 'Destroy', product_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

