<p id="notice"><%= notice %></p>

<h1>Listing Sales Order Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_order_types.each do |sales_order_type| %>
      <tr>
        <td><%= sales_order_type.name %></td>
        <td><%= User.find(sales_order_type.user_id).name %></td>
        <td><%= link_to 'Show', sales_order_type %></td>
        <td><%= link_to 'Edit', edit_sales_order_type_path(sales_order_type) %></td>
        <td><%= link_to 'Destroy', sales_order_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

