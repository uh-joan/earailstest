<h1>Listing Product Add On List Items</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>**Product add on list</th>
      <th>**Product add on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addon_list_items.each do |product_add_on_list_item| %>
      <tr>
        <td><%= User.find(product_add_on_list_item.user_id).name %></td>
        <td><%= AddonList.find(product_add_on_list_item.product_add_on_list_id).name %></td>
        <td><%= Addon.find(product_add_on_list_item.product_add_on_id).name %></td>
        <td><%= link_to 'Show', product_add_on_list_item %></td>
        <td><%= link_to 'Edit', edit_product_add_on_list_item_path(product_add_on_list_item) %></td>
        <td><%= link_to 'Destroy', product_add_on_list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

