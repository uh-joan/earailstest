<p id="notice"><%= notice %></p>

<h1>Listing Product Item Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_types.each do |product_item_type| %>
      <tr>
        <td><%= product_item_type.name %></td>
        <td><%= User.find(product_item_type.user_id).name %></td>
        <td><%= link_to 'Show', product_item_type %></td>
        <td><%= link_to 'Edit', edit_product_item_type_path(product_item_type) %></td>
        <td><%= link_to 'Destroy', product_item_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

